@model FilmPortalı.Models.FilmCrew
@using (Html.BeginForm("AddCrewToFilm", "Crew", FormMethod.Post, new { @class = "form-horizontal form-label-left" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(fc => fc.FId, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
        <span class="required">*</span>
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.DropDownListFor(fc => fc.FId, new SelectList(ViewBag.Films, "FId", "FName"), new { @class = "form-control col-md-7 col-xs-12" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(fc => fc.CId, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
        <span class="required">*</span>
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.DropDownListFor(fc => fc.CId, new SelectList(ViewBag.Crews, "CId", "CName"), new { @class = "form-control col-md-7 col-xs-12" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(fc => fc.FCMission, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
        <span class="required">*</span>
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.DropDownListFor(fc => fc.FCMission, new List<SelectListItem>
            {
                new SelectListItem{Text = "Oyuncu",Value = "Oyuncu"},
                new SelectListItem{Text = "Yönetmen",Value = "Yönetmen"}
            }, new { @class = "form-control col-md-7 col-xs-12" })
        </div>
    </div>




    <div class="form-group">
        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
            <button type="submit" class="btn btn-success" style="float: right">Kaydet</button>
        </div>
    </div>
}
