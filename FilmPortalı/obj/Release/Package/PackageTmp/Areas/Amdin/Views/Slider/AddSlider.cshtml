@model FilmPortalı.Models.Slider
@using (Html.BeginForm("AddSlider", "Slider", FormMethod.Post, new { @class = "form-horizontal form-label-left" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(s => s.SId, new { id = "categoryId" })
    <div class="form-group">
        @Html.LabelFor(s => s.SFId, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
        <span class="required">*</span>
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.DropDownListFor(s => s.SFId, new SelectList(ViewBag.Films, "FId", "FName"), new { @class = "form-control col-md-7 col-xs-12" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(s => s.SStatus, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.CheckBoxFor(s => s.SStatus, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
            <button type="submit" class="btn btn-success" style="float: right">Kaydet</button>
        </div>
    </div>
}
<div class="ln_solid"></div>

