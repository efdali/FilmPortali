@model List<FilmPortalı.Models.Comments>
@if (Model.Count > 0)
{
    foreach (var comments in Model)
    {
        <div class="container">
            <div style="display: flex;align-items: center">
                <b class="active">@comments.Films.FName / yorum:</b>
                <a href="#" class="edit" style="margin-left: auto"><i class="fas fa-edit"></i> Düzenle &nbsp;</a>
                <a href="#" class="edit" id="delete-comment" data-cid="@comments.CId"><i class="fas fa-trash "></i> Sil</a>
            </div>

            <p>
                @comments.CText
            </p>


        </div>
    }
}
else
{
    <p>Yorumunuz Bulunmamaktadır.</p>
}
