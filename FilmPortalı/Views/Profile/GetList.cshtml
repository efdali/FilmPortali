@model FilmPortalı.ViewModel.ProfileListViewModel

<div>
    <h1>İzleyeceklerim</h1>
    <div class="film-wrapper">
        @foreach (var watch in Model.watch)
        {
            <div class="film-box">
                @Ajax.ActionLink(" ", "RemoveList",new { filmId=watch.Films.FId,type=0},new AjaxOptions { HttpMethod="GET",OnFailure="showAjaxError",OnSuccess="removeRow"},new {@class="remove-list fas fa-minus-square" })
                <a href="/detay/@watch.Films.FSeo">
                    <img src="@watch.Films.FPoster" class="film-poster" alt="Film Portali @watch.Films.FName" />
                </a>
            </div>
        }
    </div>
</div>

<div>
    <h1>Beğendiklerim</h1>
    <div class="film-wrapper">
        @foreach (var likes in Model.likes)
        {
        <div class="film-box">

            @Ajax.ActionLink(" ", "RemoveList", new { filmId = likes.Films.FId, type = 1 }, new AjaxOptions { HttpMethod = "GET", OnFailure = "showAjaxError", OnSuccess = "removeRow" }, new { @class = "remove-list fas fa-minus-square" })                <a href="/detay/@likes.Films.FSeo">
                <img src="@likes.Films.FPoster" class="film-poster" alt="Film Portali @likes.Films.FName" />
            </a>
        </div>
        }
    </div>
</div>

<div>
    <h1>Beğenmediklerim</h1>
    <div class="film-wrapper">
        @foreach (var dislikes in Model.dislikes)
        {
        <div class="film-box">

            @Ajax.ActionLink(" ", "RemoveList", new { filmId = dislikes.Films.FId, type = -1 }, new AjaxOptions { HttpMethod = "GET", OnFailure = "showAjaxError", OnSuccess = "removeRow" }, new { @class = "remove-list fas fa-minus-square" }) <a href="/detay/@dislikes.Films.FSeo">
                <img src="@dislikes.Films.FPoster" class="film-poster" alt="Film Portali @dislikes.Films.FName" />
            </a>
        </div>
        }
    </div>
</div>
