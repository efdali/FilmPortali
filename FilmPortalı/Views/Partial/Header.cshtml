@model List<FilmPortalı.Models.Categories>
<!-- Header Start-->
<header>
    <div class="brand"><a href="/" class="site-logo">SITEADI.COM</a></div>
    <div class="navbar-right">
        <div class="navbar-top">
            <div class="search-input">
                <input type="text" placeholder="film ara..." class="search" id="film-search" />
                <i class="fas fa-search"></i>
                <div class="search-film-list" style="display: none">
                    @{ Html.RenderAction("SearchFilm", "Partial");}
                </div>
            </div>
            <div class="navbar-social">
                <div class="contact">
                    <i class="fas fa-envelope"></i>
                    <a href="#" class="navbar-link">
                        İletişim
                    </a>
                </div>
                <div class="twitter">
                    <i class="fab fa-twitter"></i>
                    <a href="#" class="navbar-link">
                        Twitter
                    </a>
                </div>
            </div>

        </div>
        <div class="navbar-bottom">

            <div class="navbar-categories">
                <a href="#" class="navbar-link" id="kinds">Türler</a>
                <a href="#" class="navbar-link">IMDB 250</a>
                <a href="/tur/en-cok-izlenenler" class="navbar-link">En Çok İzlenen</a>
                <a href="/tur/2019" class="navbar-link">2019</a>
                <a href="#" class="navbar-link">Rastgele</a>
                <a href="#" class="navbar-link">Diğer</a>
            </div>

            <div class="sign">
                @if (HttpContext.Current.User.Identity.Name.IsEmpty())
                {
                    <div class="signin">
                        <i class="fas fa-sign-in-alt"></i>
                        <a href="#giris-modal" rel="modal:open" class="navbar-link">Giriş</a>
                    </div>
                    <div class="signup">
                        <i class="fas fa-user-plus"></i>
                        <a href="#kayit-modal" rel="modal:open" class="navbar-link">Kayıt</a>
                    </div>
                }
                else
                {
                    <div class="profile">
                        <img src='@Session["kullaniciResim"]' alt="@HttpContext.Current.User.Identity.Name" class="profile-img" width="30px" height="30px">
                        <i class="fas fa-caret-down show-profile-list" id=""></i>
                        <ul class="list-container profile-list" id="">
                            <li>@Html.ActionLink("Profil","Index", "profil")</li>
                            <li>İzlediklerim</li>
                            <li>İzleyeceklerim</li>
                            <li>Beğendiklerim</li>
                            <li>Beğenmediklerim</li>
                            <li>@Html.ActionLink("Çıkış Yap", "LogOut", "Security")</li>
                        </ul>
                    </div>
                }
            </div>
        </div>
    </div>
</header>
<div class="kind-container" id="kind-container">
    @foreach (var categories in Model)
    {
        <a href="/tur/@categories.CId" class="kind-link">@categories.CAd</a>
    }
</div>
<!-- Header End-->
<!-- Mobil Header Start -->
<div class="mobile">
    <div class="mobile-header">
        <a href="/" class="site-logo">SITEADI.COM</a>
        <div class="search-input" style="display: none;" id="mobile-search-container">
            <input type="text" placeholder="film ara..." class="search" id="mobile-search-input" />
            <div class="search-film-list" style="display: none">
                <a href="#">
                    <img src="img/amelia.jpg" width="20%;" />
                    <span>Amelia(2015)</span>
                </a>
                <a href="#">
                    <img src="img/fight_club.jpg" width="20%;" />
                    <span>Fight Club(2014)</span>
                </a>
            </div>
        </div>
        <i class="fas fa-search mobile-search-icon"></i>
        <i class="fas fa-bars" id="open-header"></i>
    </div>
    <div class="header-container">
        @if (HttpContext.Current.User.Identity.Name.IsEmpty())
        {
            <div class="sign-group">
                <a href="#giris-modal" rel="modal:open" class="btn btn-sign"><i class="fas fa-sign-in-alt"></i>Giriş</a>
                <a href="#kayit-modal" rel="modal:open" class="btn btn-sign"><i class="fas fa-user-plus"></i>Kayıt</a>
            </div>
        }
        else
        {

            <div class="profile">
                <img src='@Session["kullaniciResim"]' alt="Bradd" class="profile-img" width="30px" height="30px">
                <i class="fas fa-caret-down show-profile-list" id=""></i>
                <ul class="list-container profile-list" id="">
                    <li>@Html.ActionLink("Profil", "Index", "profil")</li>
                    <li>İzlediklerim</li>
                    <li>İzleyeceklerim</li>
                    <li>Beğendiklerim</li>
                    <li>Beğenmediklerim</li>
                    <li>@Html.ActionLink("Çıkış Yap", "LogOut", "Security")</li>
                </ul>
            </div>
        }

        <div style="text-align: center;margin:30px 0;">
            <a href="#" class="navbar-link" id="mobile-kinds">
                Türler <i class="fas fa-caret-down"></i>
            </a>
        </div>
        <div class="kind-container" style="display: flex" id="mobile-kind-container">
            @foreach (var categories in Model)
            {
                <a href="/tur/@categories.CId" class="kind-link active">@categories.CAd</a>
            }
        </div>
        <div class="navbar-categories">
            <a href="#" class="navbar-link">IMDB 250</a>
            <a href="#" class="navbar-link">En Çok İzlenen</a>
            <a href="#" class="navbar-link">2019</a>
            <a href="#" class="navbar-link">Rastgele</a>
            <a href="#" class="navbar-link">Diğer</a>
        </div>
    </div>
</div>
<!-- Mobil Header End -->
