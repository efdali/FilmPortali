@model List<FilmPortalı.Models.Films>
@{
    ViewBag.Title = "Tur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Film Container Start -->
<div class="container">
    <h1>@ViewBag.Header</h1>
    <div class="sort-panel">
        <b>Sıralama şekli:</b> <a href="#">Ekleme Tarihi</a>-<a href="#" class="active">IMDB puanı</a>-<a href="#">İzlenme Sayısı</a>
    </div>
    <div class="film-wrapper">
        @foreach (var films in Model)
        {
            <div class="film-box">
                <a href="/detay/@films.FName">
                    <img src="@films.FPoster" class="film-poster" alt="@films.FName"/>
                </a>
            </div>
        }
    </div>
    <button class="btn btn-more">Daha Fazla Film</button>
</div>
<!-- Film Container End -->
