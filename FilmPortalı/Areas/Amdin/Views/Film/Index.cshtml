@model List<FilmPortalı.Models.Films>
@{
    ViewBag.Title = "Filmler";
    Layout = "~/Areas/Amdin/Views/Shared/_Layout.cshtml";
}

@section styles{
    <link href="~/Areas/Amdin/Content/css/jquery.dataTables.min.css" rel="stylesheet">
}
<!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Filmler <small>Filmler Listesi</small></h3>
            </div>

            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Filmler</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li class="dropdown">
                                <a href="/Amdin/Film/AddFilm" class="dropdown-toggle"><i class="fa fa-plus"></i></a>
                            </li>
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <table id="film-table" class="table table-striped table-bordered table-responsive">
                            <thead>
                                <tr>
                                    <th>Ad</th>
                                    <th>Türkçe Adı</th>
                                    <th>Yıl</th>
                                    <th>Imdb</th>
                                    <th>Ülke</th>
                                    <th>Poster</th>
                                    <th>Fragman</th>
                                    <th>Link</th>
                                    @*<th>Konu</th>*@
                                    <th>Eklenme Tarihi</th>
                                    <th>Güncellenme Tarihi</th>
                                    <th>Düzenle</th>
                                    <th>Sil</th>
                                </tr>
                            </thead>


                            <tbody>
                                @foreach (var film in Model)
                                {
                                    <tr>
                                        <td>@film.FName</td>
                                        <td>@film.FTurkishName</td>
                                        <td>@film.FYear</td>
                                        <td>@film.FImdb</td>
                                        <td>@film.FCountry</td>
                                        <td><img src="@film.FPoster" alt="@film.FName" class="img-responsive" width="50px" /></td>
                                        <td><a href="@film.FTrailer">Fragmanı İzle</a></td>
                                        <td>@film.FSeo</td>
                                        @*<td><small>@film.FSummary</small></td>*@
                                        <td>@film.FCDate</td>
                                        <td>@film.FUDate</td>
                                        <td>@Html.ActionLink("Düzenle","UpdateFilm/",new { filmId=film.FId },new {@class="btn btn-warning" })</td>
                                        <td>@Ajax.ActionLink("Sil", "DeleteFilm/", new { filmId = film.FId }, new AjaxOptions { HttpMethod = "GET",Confirm="Silmek istediğine emin misin?",OnSuccess= "RemoveRow" }, new { @class = "btn btn-danger" })</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->

@section scripts{

    <script src="~/Areas/Amdin/Scripts/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#film-table').DataTable();
        });

        function RemoveRow() {
            var $tr = $(this).closest('tr');
            $tr.remove();
        }
    </script>

}
